<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_news">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="恭喜法国队获得2018年俄罗斯世界杯冠军！"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018-07-16 19:28"
        android:textSize="12sp"
        android:textColor="#7F7F7F"
        app:layout_constraintTop_toBottomOf="@id/tv_news_title"/>

    <TextView
        android:id="@+id/tv_news_paragraph1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="北京时间7月15日（周日）晚上23:00，2018年俄罗斯世界杯决赛在莫斯科卢日尼基球场举行，法国国家队迎战克罗地亚国家队。"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_news_time"/>

</android.support.constraint.ConstraintLayout>